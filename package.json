{
  "name": "@anydotcrypto/metatransactions",
  "version": "0.0.1",
  "description": "A minimal approach for meta-transaction support.",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build-test": "npm run build && npm run test",
    "build-execute": "npm run build && npm run execute",
    "build-just": "waffle waffle.json",
    "build": "waffle waffle.json && npm run build-types",
    "build-types": "typechain --target ethers --outDir ./build ./build/**/*.json",
    "execute": "ts-node src/ts/deployment.ts",
    "test": "NODE_ENV=test mocha --require ts-node/register --extension 'test.ts' './test/**/*.test.ts' --exit"
  },
  "devDependencies": {
    "@any-sender/client": "^0.2.0-beta.0",
    "@chainlink/contracts": "0.0.3",
    "@openzeppelin/contracts": "3.0.0-beta.0",
    "@pisa-research/test-utils": "^0.1.28",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^5.2.7",
    "bn.js": "^5.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ethereum-doppelganger": "0.0.7",
    "ethereum-waffle": "2.3.0-istanbul.0",
    "ethers": "^4.0.43",
    "install": "^0.13.0",
    "mocha": "^7.0.0",
    "npm": "^6.13.6",
    "ts-node": "^8.6.2",
    "typechain": "^1.0.3",
    "typechain-target-ethers": "^1.0.3",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "np": "^6.2.1"
  }
}
